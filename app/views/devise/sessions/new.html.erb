<h2><%= t('user.sign_in.title') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, label: t('user.sign_in.email') %>
    <%= f.input :password, :required => false, label: t('user.sign_in.password')%>
    <%= f.input :remember_me, :as => (:boolean if devise_mapping.rememberable?), label: t('user.sign_in.remember_me') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('user.sign_in.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
