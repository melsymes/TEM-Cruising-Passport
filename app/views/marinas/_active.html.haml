%h3
  = t('marinas.management.active_berth_holders')

.span8
%table.table.table-condensed
  %thead
    %tr
      %th= t('marinas.management.username')
      %th= t('marinas.management.email')
      %th= t('marinas.management.registered_date')
      %th= t('marinas.management.role')
      %th= t('marinas.management.expire_date')
      %th= t('marinas.management.action')
  %tbody
    - @marina.active_users.each do |user|
      %tr
        %td= link_to user.name, user
        %td= user.email
        %td= user.created_at.to_date
        %td= user.roles.first.name.titleize unless user.roles.first.nil?
        %td= link_to t('marinas.management.expire_berth_holder'), expire_bertholder_users_path(user, :marina => @marina)
