%p
  %b Name:
  = @marina.name
%p
  %b Address:
  = @marina.address
%p
  %b Address1:
  = @marina.address1
%p
  %b Town:
  = @marina.town
%p
  %b County:
  = @marina.county
%p
  %b Country:
  = @marina.country
%p
  %b Postcode:
  = @marina.postcode



- if !@manager.nil?
  - if (@manager.has_role? :admin) or (@manager.has_role? :manager) # user is a admin or manager
    =form_tag create_user_marinas_path do
      =text_field_tag :user_email, params[:user_email]
      =submit_tag "Invite"
    = render 'pending'
    = render 'active_managers'
    = render 'active'
    = render 'expired'
    = render 'expired_manager'


%br
  = link_to 'Edit', edit_marina_path(@marina)
  \|
  = link_to 'Back', marinas_path(@marina)
