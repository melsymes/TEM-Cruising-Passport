!!!

%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Cruising Passport"
      %meta{:content => content_for?(:description) ? yield(:description) : "Myapp10", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)


  %body
    = render 'layouts/navigation'

    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
              = yield

      %footer
      / ! end of .container
      %br
    / ! end of #main
    %footer.navbar-inner
      .container
        .center
          .span12
            = render 'layouts/footer'

