- if user_signed_in?


  - if (current_user.has_role? :manager) or (current_user.has_role? :admin)

    %p.container.span12
      %h2
        = t('home.signed_in_home_title')
      = t('home.signed_in_text')

    %p.container.span2
      = t('home.search_users')
      =form_tag search_users_path, :method => 'get' do
        =text_field_tag :search, params[:search]
        =submit_tag "search"
      %br
        =t('home.signed_in.invite_to_join')
        %p
          = link_to( "invite user", new_user_invitation_path )

    /%br
    /  = @user.roles.each { |r| r.name}
    /  = @user.marina

  - else
    %p
      - if @user.boat_name.nil?
        Get started -  Fill in your boat name:
        =link_to 'Finish registration', edit_user_registration_path
      - else
        = @user.boat_name
        is now registered
    %p
      - if @user.marina_state.nil?
        Get started -  connect to your marina:
        = link_to 'Connect to your marina', marinas_path
      - else
        Your current status is:
        = @user.marina_state
        %p
          - if @user.marina_state == 'PENDING'
            = t('home.passport_pending')
          - else
            = t('home.passport')
            = @user.passport_code unless @user.nil?

%a.scrolltop{:href => "#"}
  %span up

- if !user_signed_in?
  #hero
    .container
      / starts carousel
      .row.animated.fadeInDown
        .span12
          #myCarousel.carousel.slide
            / carousel items
            .carousel-inner
              / slide
              .active.item.slide1
                .row
                  .span6
                    / <img src="img/slide1.png" alt="slide1" />
                    = image_tag('slide1-TEM.png')
                  .span4
                    %h1
                      = t('home.slider1_header')
                    %p
                      = t('home.slider1_para')
                    %a.btn.btn-success.btn-large{:href => "http://www.transeuropemarinas.com/"}
                      = t('home.slider1_button')
              / slide
              .item.slide2
                .row
                  .span4.animated.fadeInUpBig
                    %h1
                      = t('home.download_app')
                    %p
                      = t('home.download_app_text')
                    %a.btn.btn-success.btn-large{:href => "http://www.transeuropemarinas.com/"}
                      = t('home.download_app_button')
                  .span6.animated.fadeInDownBig
                    = image_tag('slide2-tem.png')
                    /%img{:alt => "slide2", :src => "img/slide2.png"}/
              / slide
              .item.slide3.animated.fadeInUpBig
                = image_tag('slide3-tem.png')
                /%img{:alt => "slide3", :src => "img/slide3.png"}/
            / Carousel nav
            %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} ‹
            %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} ›

/ features
#features
  .container
    / header
    %h2.section_header
      %hr.left.visible-desktop
        %span

          = t('home.features.title')
        %hr.right.visible-desktop
    / feature list
    .row
      .span4.feature
        /%img.thumb{:alt => "feature1", :src => "feature1.jpg"}/
        = image_tag('feature1.jpg', :class => 'thumb')
        %h3
          %i.i_cloud
          = t('home.features.f1_title')
        %p.description
          = t('home.features.f1_body')
        %a.btn.btn-default{:href => "#"} more
      .span4.feature
        = image_tag('feature2.jpg', class: 'thumb')
        %h3
          %i.i_chart
          = t('home.features.f2_title')
        %p.description
          = t('home.features.f2_body')
        %a.btn.btn-default{:href => "#"} more
      .span4.feature
        = image_tag('feature3.jpg', class: 'thumb')
        %h3
          %i.i_movil
          = t('home.features.f3_title')
        %p.description
          = t('home.features.f3_body')
        %a.btn.btn-default{:href => "#"} more

/ starts testimonial
#testimonials
  .container
    .controls
      %hr
    .phrases_wrapper
      .phrase
        .row
          .span7
            %p.testimony
              = t('home.testimonials.body')
              %span "
          .span3.offset1
            .pic
              = image_tag('pic1.jpg', class: 'img-circle')
              %span.name
                = t('home.testimonials.name')
              %span.position
                = t('home.testimonials.position')

